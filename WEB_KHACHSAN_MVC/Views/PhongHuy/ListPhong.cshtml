@{
    ViewBag.Title = "ListPhong";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>ListPhong</h2>

<p>
    @Html.ActionLink("Create New", "CreatePhong")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TENPHONG)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SONGUOITOIDA)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TINHTRANG)
        </th>
