@model IEnumerable<WEB_KHACHSAN_MVC.Models.PHONG>

@{
    ViewBag.Title = "ListPhong";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>ListPhong</h2>
<style>
    table, th, td {
        border: 1px solid black;
    }
</style>
<p>
    @Html.ActionLink("Create New", "CreatePhong")
</p>
<table class="table">
    <tr>
        <th>
            Tên Phòng
        </th>
        <th>
            Số Người Tối Đa
        </th>
        <th>
            Tình Trạng
        </th>
        <th>
            Hình
        </th>
        <th>
            Mã Loại Phòng
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TENPHONG)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SONGUOITOIDA)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TINHTRANG)
        </td>
        <td>
            <img src="@item.HINH" width="200" alt="">
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MALOAIPHONG)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditPhong", new { maPhong = item.MAPHONG }) |
            @Html.ActionLink("Details", "Details", new { id= item.MAPHONG }) |
            @Html.ActionLink("Delete", "DeletePhong", new { maPhong = item.MAPHONG })
        </td>
    </tr>
}

</table>
