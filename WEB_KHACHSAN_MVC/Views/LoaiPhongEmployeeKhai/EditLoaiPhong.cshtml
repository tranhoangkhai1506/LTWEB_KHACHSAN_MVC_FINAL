@model WEB_KHACHSAN_MVC.Models.LOAIPHONG

@{
    ViewBag.Title = "EditLoaiPhong";
    Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
}

<h2 style="text-align:center">Sửa Loại Phòng</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="width: 14%; margin: 0 auto; text-align:center">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MALOAIPHONG)

        <div class="form-group">
            Tên Loại Phòng
            <div class="col-md-12">
                @Html.EditorFor(model => model.TENLOAIPHONG, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                @Html.ValidationMessageFor(model => model.TENLOAIPHONG, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Giá Thuê
            <div class="col-md-12">
                @Html.EditorFor(model => model.GIATHUE, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                @Html.ValidationMessageFor(model => model.GIATHUE, "", new { @class = "text-danger" })
            </div>
        </div>

    </div>
    <br />
    <div class="form-group" style="display: flex; justify-content: center; margin-left: 505px">
        <div class="col-md-offset-2 col-md-10">
            <div class="btn btn-secondary"> @Html.ActionLink("Back", "ListLoaiPhong") </div>
            <input type="submit" value="Save" class="btn btn-success" />
        </div>
    </div>
}


