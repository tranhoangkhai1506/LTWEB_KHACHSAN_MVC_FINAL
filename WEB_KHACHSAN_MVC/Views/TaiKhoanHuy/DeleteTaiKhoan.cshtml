@model WEB_KHACHSAN_MVC.Models.TAIKHOAN

@{
    ViewBag.Title = "DeleteTaiKhoan";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align:center">Xóa Tài Khoản</h2>

<div style="width: 14%; margin: 0 auto">
    <hr />
    <dl class="dl-horizontal">
        <dd>
            Tên Đăng Nhập: @Html.DisplayFor(model => model.TENDANGNHAP)
        </dd>

        <dd>
            Mật Khẩu: @Html.DisplayFor(model => model.MATKHAU)
        </dd>

        <dd>
            Mã Nhân Viên: @Html.DisplayFor(model => model.MANHANVIEN)
        </dd>

        <dd>
            Mã Phân Quyền: @Html.DisplayFor(model => model.MAPHANQUYEN)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <div class="btn btn-secondary">
                @Html.ActionLink("Back", "ListTaiKhoan")
            </div>
            <input type="submit" value="Delete" class="btn btn-danger" />

        </div>
    }
</div>
