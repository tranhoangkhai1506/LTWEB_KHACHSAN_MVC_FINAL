@model WEB_KHACHSAN_MVC.Models.TAIKHOAN

@{
    ViewBag.Title = "EditTaiKhoan";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align:center">Sửa Tài Khoản</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="width: 14%; margin: 0 auto; text-align:center">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.TENDANGNHAP)

        <div class="form-group">
            Mật Khẩu
            <div class="col-md-12">
                @Html.EditorFor(model => model.MATKHAU, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                @Html.ValidationMessageFor(model => model.MATKHAU, "", new { @class = "text-danger" })
                <h6 style="color: red">@ViewData["ChuoiMatKhauSai"]</h6>
            </div>
        </div>

        <div class="form-group">
            Mã Nhân Viên
            <div class="col-md-12">
                @Html.EditorFor(model => model.MANHANVIEN, new { htmlAttributes = new { @class = "form-control", required = "required", min = "1" } })
                @Html.ValidationMessageFor(model => model.MANHANVIEN, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Mã Phân Quyền
            <div class="col-md-12">
                @Html.EditorFor(model => model.MAPHANQUYEN, new { htmlAttributes = new { @class = "form-control", required = "required", min = "1" } })
                @Html.ValidationMessageFor(model => model.MAPHANQUYEN, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <br />
    <div class="form-group" style="display: flex; justify-content: center; margin-left: 505px">
        <div class="col-md-offset-2 col-md-10">
            <div class="btn btn-secondary"> @Html.ActionLink("Back", "ListTaiKhoan") </div>
            <input type="submit" value="Save" class="btn btn-success" />
        </div>
    </div>
}
