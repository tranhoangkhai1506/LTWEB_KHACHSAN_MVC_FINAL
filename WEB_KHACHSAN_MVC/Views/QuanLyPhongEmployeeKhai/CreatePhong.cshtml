@model WEB_KHACHSAN_MVC.Models.PHONG

@{
    ViewBag.Title = "CreatePhong";
    Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
}

<h2 style="text-align:center">Thêm Phòng</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            Tên Phòng
            <div class="col-md-12">
                @Html.EditorFor(model => model.TENPHONG, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                @Html.ValidationMessageFor(model => model.TENPHONG, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Số Người Tối Đa
            <div class="col-md-12">
                @Html.EditorFor(model => model.SONGUOITOIDA, new { htmlAttributes = new { @class = "form-control", required = "required", min = "1" } })
                @Html.ValidationMessageFor(model => model.SONGUOITOIDA, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Tình Trạng
            <div class="col-md-12">
                @Html.EditorFor(model => model.TINHTRANG, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                @Html.ValidationMessageFor(model => model.TINHTRANG, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Hình
            <div class="col-md-12">
                @Html.EditorFor(model => model.HINH, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                @Html.ValidationMessageFor(model => model.HINH, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Mã Loại Phòng
            <div class="col-md-12">
                @Html.EditorFor(model => model.MALOAIPHONG, new { htmlAttributes = new { @class = "form-control", required = "required", min = "1" } })
                @Html.ValidationMessageFor(model => model.MALOAIPHONG, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <br />
    <div class="form-group" style="display: flex; justify-content: center; margin-left: 505px">
        <div class="col-md-offset-2 col-md-10">
            <div class="btn btn-secondary"> @Html.ActionLink("Back", "ListPhong") </div>
            <input type="submit" value="Save" class="btn btn-success" />
        </div>
    </div>
}

