@model WEB_KHACHSAN_MVC.Models.DICHVU

@{
    ViewBag.Title = "CreateDichVu";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align:center">Thêm Dịch Vụ</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            Tên dịch vụ
            <div class="col-md-10">
                @Html.EditorFor(model => model.TENDICHVU, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                @Html.ValidationMessageFor(model => model.TENDICHVU, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Đơn vị tính
            <div class="col-md-10">
                @Html.EditorFor(model => model.DONVITINH, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                @Html.ValidationMessageFor(model => model.DONVITINH, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Giá thuê dịch vụ
            <div class="col-md-10">
                @Html.EditorFor(model => model.GIATHUEDICHVU, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                @Html.ValidationMessageFor(model => model.GIATHUEDICHVU, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Mã loại dịch vụ
            <div class="col-md-10">
                @Html.EditorFor(model => model.MALOAIDICHVU, new { htmlAttributes = new { @class = "form-control", required = "required", min = "1" } })
                @Html.ValidationMessageFor(model => model.MALOAIDICHVU, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <br />
    <div class="form-group" >
        <div class="col-md-offset-2 col-md-10">
            <div class="btn btn-secondary"> @Html.ActionLink("Back", "ListDichVu") </div>
            <input type="submit" value="Save" class="btn btn-success" />
        </div>
    </div>
}
