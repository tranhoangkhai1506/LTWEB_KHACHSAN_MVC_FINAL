@model IEnumerable<WEB_KHACHSAN_MVC.Models.DICHVU>

@{
    ViewBag.Title = "ListDichVu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List Dịch Vụ</h2>

<p>
    @Html.ActionLink("Create New", "CreateDichVu")
</p>
<style>
    table, th, td {
        border: 1px solid black;
    }
</style>
<table class="table" style="text-align:center">
    <tr>
        <th>
            Tên dịch vụ
        </th>
        <th>
            Đơn vị tính
        </th>
        <th>
            Giá thuê
        </th>
        <th>
            Mã loại dịch vụ
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TENDICHVU)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DONVITINH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GIATHUEDICHVU)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MALOAIDICHVU)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditDichVu", new { maDichVu=item.MADICHVU }) |
            @Html.ActionLink("Delete", "DeleteDichVu", new { maDichVu=item.MADICHVU })
        </td>
    </tr>
}

</table>
