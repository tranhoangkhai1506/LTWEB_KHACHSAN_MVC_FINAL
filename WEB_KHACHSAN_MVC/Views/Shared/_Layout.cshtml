                            <div class="h-100 d-inline-flex align-items-center py-2 me-4">
                                <i class="fa fa-envelope text-primary me-2"></i>
                                <p class="mb-0">lotushotel@gmail.com</p>
                            </div>
                            <div class="h-100 d-inline-flex align-items-center py-2">
                                <i class="fa fa-phone-alt text-primary me-2"></i>
                                <p class="mb-0">+8412 345 6789</p>
                            </div>
                        </div>
                        <div class="col-lg-5 px-5 text-end">
                            <div class="d-inline-flex align-items-center py-2">
                                <a class="me-3" href=""><i class="fab fa-facebook-f"></i></a>
                                <a class="me-3" href=""><i class="fab fa-twitter"></i></a>
                                <a class="me-3" href=""><i class="fab fa-linkedin-in"></i></a>
                                <a class="me-3" href=""><i class="fab fa-instagram"></i></a>
                                <a class="" href=""><i class="fab fa-youtube"></i></a>
                            </div>
                        </div>
                    </div>
                    <nav class="navbar navbar-expand-lg bg-dark navbar-dark p-3 p-lg-0">
                        <a href="index.html" class="navbar-brand d-block d-lg-none">
                            <h1 class="m-0 text-primary text-uppercase">LOTUS</h1>
                        </a>
                        <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                            <div class="navbar-nav mr-auto py-0">
                                <a href="@Url.Action("Index", "HomeKhai")" class="nav-item nav-link">HOME</a>
                                <a href="@Url.Action("Index", "RoomQuang")" class="nav-item nav-link">ROOMS</a>
                                <a href="@Url.Action("Index", "BookingQuang")" class="nav-item nav-link">BOOKING</a>
                                <a href="@Url.Action("Index", "ServiceHuy")" class="nav-item nav-link">SERVICES</a>
                                <a href="@Url.Action("Index", "ContactHuy")" class="nav-item nav-link">CONTACT</a>
                                <div class="nav-item dropdown">
                                    <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">PAGES</a>
                                    <div class="dropdown-menu rounded-0 m-0">
                                        <a href="@Url.Action("Index", "AboutKhai")" class="dropdown-item">About Us</a>
                                        <a href="@Url.Action("Index", "OurTeamDinh")" class="dropdown-item">Our Teams</a>
                                    </div>
                                </div>

                            </div>
                            <a href="@Url.Action("DangNhap","LoginQuang")" class="btn btn-primary rounded-0 py-4 px-md-5 d-none d-lg-block">ĐĂNG NHẬP<i class="fa fa-arrow-right ms-3"></i></a>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- Header End -->
    <div class="container-xxl py-5">
        <div class="container">
            @RenderBody()
        </div>
    </div>
        <div class="container pb-5">
            <div class="row g-5">
                <div class="col-md-6 col-lg-4">
                    <div class="bg-primary rounded p-4">
                        <a href="@Url.Action("DangNhap","LoginQuang")"><h1 class="text-white text-uppercase mb-3">LOTUS</h1></a>
                        <p class="text-white mb-0">
                            <a class="text-dark fw-medium">Your Satisfaction is our happiness! Thank you used our service.</a>
                        </p>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
