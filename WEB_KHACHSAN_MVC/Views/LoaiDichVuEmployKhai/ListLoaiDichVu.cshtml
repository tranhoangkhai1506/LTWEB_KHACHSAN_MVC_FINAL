@model IEnumerable<WEB_KHACHSAN_MVC.Models.LOAIDICHVU>

@{
    ViewBag.Title = "ListLoaiDichVu";
    Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
}

<h2>ListLoaiDichVu</h2>
<style>
    table, th, td {
        border: 1px solid black;
    }
</style>
<p>
    @Html.ActionLink("Create New", "CreateLoaiDichVu")
</p>
<table class="table">
    <tr>
        <th>
            Mã Loại Dịch Vụ
        </th>

        <th>
            Tên Loại Dịch Vụ
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MALOAIDICHVU)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TENLOAIDICHVU)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditLoaiDichVu", new { maLoaiDichVu = item.MALOAIDICHVU }) |
                @Html.ActionLink("Details", "DetailsLoaiDichVu", new { maLoaiDichVu = item.MALOAIDICHVU }) |
                @Html.ActionLink("Delete", "DeleteLoaiDichVu", new { maLoaiDichVu = item.MALOAIDICHVU })
            </td>
        </tr>
    }

</table>
