@model WEB_KHACHSAN_MVC.Models.HOADON

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align:center">Sửa Hóa Đơn</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MAHOADON)

        <div class="form-group">
            <div class="col-md-10">
                Tổng tiền @Html.EditorFor(model => model.TONGTIEN, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                @Html.ValidationMessageFor(model => model.TONGTIEN, "", new { @class = "text-danger" })
            </div>
         </div>

        <div class="form-group">
            <div class="col-md-10">
                Ngày thanh toán @Html.EditorFor(model => model.NGAYTHANHTOAN, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                @Html.ValidationMessageFor(model => model.NGAYTHANHTOAN, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                Mã phiếu đặt phòng
                @Html.EditorFor(model => model.MAPHIEUDATPHONG, new { htmlAttributes = new { @class = "form-control", required = "required", min = "1" } })
                @Html.ValidationMessageFor(model => model.MAPHIEUDATPHONG, "", new { @class = "text-danger" })
                @ViewData["Error_BookingCard"]
                @ViewData["Error_BookingCard_Room"]
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                Mã nhân viên @Html.EditorFor(model => model.MANHANVIEN, new { htmlAttributes = new { @class = "form-control", required = "required", min = "1" } })
                @Html.ValidationMessageFor(model => model.MANHANVIEN, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="btn btn-secondary"> @Html.ActionLink("Back", "Index") </div>
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
    </div>
}

